!!! 5
%html
  %head
    = render partial: "shared/header"
  %body
    .navbar
      .navbar-inner
        %a.brand{href: "#"}
        %ul.nav
          = nav_link "Listings", href: listings_path, tab: :listings
        %ul.nav
          = nav_link "Sign Up", tab: :password
        - if current_user 
          %ul.nav
            = link_to "Sign out", destroy_user_session_path, class: "signout"
    - if notice.present?
      %p{:class => "notice"}= notice
    - if alert.present?
      %p{:class => "alert"}= alert
    = yield
