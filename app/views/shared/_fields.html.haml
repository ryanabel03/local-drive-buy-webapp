=f.label :title
=f.text_field :title

=f.label :description
=f.text_area :description, cols: 40, rows: 5

=f.label :category
#listings_category=f.select :category, options_for_select(categories, @listing.category)

=f.label :sub_category
- if @listing.category == "Edibles"
  =f.select :sub_category, options_for_select(edible_sub_categories, @listing.sub_category)
- else
  =f.select :sub_category, options_for_select(goods_sub_categories, @listing.sub_category)

